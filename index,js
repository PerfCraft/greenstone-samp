const express = require("express");
const fetch = require("node-fetch");

const app = express();
const PORT = process.env.PORT || 3000;

// SA-MP Status Page
app.get("/", async (req, res) => {
  try {
    const response = await fetch("https://api.g-stone.ro/samp/");
    const data = await response.json();

    const players = data.players ?? 0;
    const max = data.maxplayers ?? 250;

    res.send(`
      <!DOCTYPE html>
      <html lang="en">
      <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SA-MP Server Status</title>
        <style>
          body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #141e30, #243b55);
            color: #fff;
          }
          .card {
            background: rgba(255, 255, 255, 0.08);
            padding: 2rem 3rem;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.4);
            text-align: center;
          }
          h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
          }
          .status {
            font-size: 1.4rem;
            font-weight: bold;
            background: rgba(0,0,0,0.4);
            padding: 0.5rem 1.2rem;
            border-radius: 10px;
            display: inline-block;
          }
        </style>
      </head>
      <body>
        <div class="card">
          <h1>SA-MP Players Online</h1>
          <div id="status" class="status">${players} / ${max} players</div>
        </div>
        <script>
          async function refreshStatus() {
            try {
              const res = await fetch("/api/players");
              const data = await res.json();
              document.getElementById("status").textContent =
                data.players + " / " + data.maxplayers + " players";
            } catch (e) {
              document.getElementById("status").textContent = "Error fetching data";
            }
          }
          setInterval(refreshStatus, 5000);
        </script>
      </body>
      </html>
    `);
  } catch (err) {
    res.send("❌ Error fetching SA-MP server data.");
  }
});

// API endpoint (for auto-refresh)
app.get("/api/players", async (req, res) => {
  try {
    const response = await fetch("https://api.g-stone.ro/samp/");
    const data = await response.json();
    res.json(data);
  } catch {
    res.json({ players: 0, maxplayers: 250 });
  }
});

app.listen(PORT, () => console.log(`SA-MP status running on port ${PORT}`));
